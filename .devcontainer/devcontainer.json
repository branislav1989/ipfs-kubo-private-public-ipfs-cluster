version: '3.8'

services:
  # PostgreSQL Database
  postgres:
    image: postgres:14-alpine
    container_name: ipfs-billing-db
    restart: unless-stopped
    environment:
      POSTGRES_DB: ipfs_billing
      POSTGRES_USER: billing_user
      POSTGRES_PASSWORD: ${DB_PASS:-change_this_secure_password}
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./init-db.sql:/docker-entrypoint-initdb.d/init-db.sql
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U billing_user"]
      interval: 10s
      timeout: 5s
      retries: 5

  # IPFS Node (Public)
  ipfs-public:
    image: ipfs/kubo:latest
    container_name: ipfs-public
    restart: unless-stopped
    environment:
      - IPFS_PATH=/data/ipfs
    volumes:
      - ipfs_public_data:/data/ipfs
    ports:
      - "4001:4001"     # P2P
      - "5001:5001"     # API
      - "8080:8080"     # Gateway
    command: ["daemon", "--migrate=true", "--enable-gc"]

  # IPFS Node (Private)
  ipfs-private:
    image: ipfs/kubo:latest
    container_name: ipfs-private
    restart: unless-stopped
    environment:
      - IPFS_PATH=/data/ipfs
    volumes:
      - ipfs_private_data:/data/ipfs
    ports:
      - "4002:4001"     # P2P
      - "5002:5001"     # API
      - "8081:8080"     # Gateway
    command: ["daemon", "--migrate=true", "--enable-gc"]

  # SatSale Bitcoin Payment Processor
  satsale:
    build:
      context: ./satsale
      dockerfile: Dockerfile
    container_name: satsale
    restart: unless-stopped
    volumes:
      - ./satsale:/app
      - satsale_data:/app/database
    ports:
      - "8000:8000"
    environment:
      - PYTHONUNBUFFERED=1
    depends_on:
      - postgres

  # Flask Application
  flask-app:
    build:
      context: ./flask-app
      dockerfile: Dockerfile
    container_name: ipfs-hosting-app
    restart: unless-stopped
    env_file:
      - flask-app/.env
    environment:
      - DB_HOST=postgres
      - DB_NAME=ipfs_billing
      - DB_USER=billing_user
      - DB_PASS=${DB_PASS:-change_this_secure_password}
    volumes:
      - ./flask-app:/app
      - flask_uploads:/app/temp_uploads
    ports:
      - "5003:5003"
    depends_on:
      postgres:
        condition: service_healthy
      ipfs-public:
        condition: service_started
      ipfs-private:
        condition: service_started
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5003/"]
      interval: 30s
      timeout: 10s
      retries: 3

  # Nginx Reverse Proxy
  nginx:
    image: nginx:alpine
    container_name: ipfs-nginx
    restart: unless-stopped
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./index.html:/usr/share/nginx/html/index.html:ro
      - ./sitemap.xml:/usr/share/nginx/html/sitemap.xml:ro
      - ./robots.txt:/usr/share/nginx/html/robots.txt:ro
      - ./feed*.xml:/usr/share/nginx/html/:ro
    ports:
      - "80:80"
      - "443:443"
    depends_on:
      - flask-app
      - satsale

volumes:
  postgres_data:
  ipfs_public_data:
  ipfs_private_data:
  satsale_data:
  flask_uploads:

networks:
  default:
    name: ipfs-hosting-network
